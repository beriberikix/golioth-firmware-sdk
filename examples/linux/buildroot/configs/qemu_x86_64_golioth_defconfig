# Architecture
BR2_x86_64=y

# Build optimization - Cache downloads to speed up builds
BR2_DL_DIR="$(BR2_EXTERNAL_GOLIOTH_BUILDROOT_PATH)/dl"
BR2_PER_PACKAGE_DIRECTORIES=y

# External Toolchain - Use Bootlin prebuilt toolchain for faster builds
BR2_TOOLCHAIN_EXTERNAL=y
BR2_TOOLCHAIN_EXTERNAL_BOOTLIN=y
BR2_TOOLCHAIN_EXTERNAL_BOOTLIN_X86_64_CORE_I7_GLIBC_STABLE=y

# System
BR2_SYSTEM_DHCP="eth0"
BR2_TARGET_GENERIC_HOSTNAME="golioth-qemu"
BR2_TARGET_GENERIC_ISSUE="Welcome to Golioth QEMU"
BR2_ROOTFS_OVERLAY="$(BR2_EXTERNAL_GOLIOTH_BUILDROOT_PATH)/board/qemu/x86_64-golioth/rootfs_overlay"
BR2_ROOTFS_POST_BUILD_SCRIPT="$(BR2_EXTERNAL_GOLIOTH_BUILDROOT_PATH)/board/qemu/x86_64-golioth/post-build.sh"

# Kernel
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_CUSTOM_VERSION=y
BR2_LINUX_KERNEL_CUSTOM_VERSION_VALUE="6.6.51"
BR2_LINUX_KERNEL_USE_ARCH_DEFAULT_CONFIG=y
BR2_LINUX_KERNEL_CONFIG_FRAGMENT_FILES="$(BR2_EXTERNAL_GOLIOTH_BUILDROOT_PATH)/board/qemu/x86_64-golioth/linux.fragment"
BR2_LINUX_KERNEL_NEEDS_HOST_OPENSSL=y

# Filesystem
BR2_TARGET_ROOTFS_EXT2=y
BR2_TARGET_ROOTFS_EXT2_4=y
BR2_TARGET_ROOTFS_EXT2_SIZE="120M"

# Bootloader
BR2_TARGET_GRUB2=y
BR2_TARGET_GRUB2_X86_64_EFI=y

# Network packages
BR2_PACKAGE_DHCPCD=y
BR2_PACKAGE_OPENSSH=y
BR2_PACKAGE_WGET=y
BR2_PACKAGE_CA_CERTIFICATES=y

# Development tools
BR2_PACKAGE_STRACE=y
BR2_PACKAGE_GDB=y

# Golioth packages
BR2_PACKAGE_GOLIOTH_FIRMWARE_SDK=y
BR2_PACKAGE_GOLIOTH_APP=y

# Host tools
BR2_PACKAGE_HOST_QEMU=y
BR2_PACKAGE_HOST_QEMU_SYSTEM_MODE=y