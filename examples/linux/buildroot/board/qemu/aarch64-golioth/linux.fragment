# Additional kernel config for Golioth networking on ARM64
CONFIG_VIRTIO=y
CONFIG_VIRTIO_PCI=y
CONFIG_VIRTIO_NET=y
CONFIG_NETDEVICES=y
CONFIG_NET_CORE=y
CONFIG_INET=y
# ARM64 specific
CONFIG_ARM64=y
CONFIG_PCI=y
CONFIG_PCI_HOST_GENERIC=y
# Disable specific certificate tools that require OpenSSL
CONFIG_SYSTEM_TRUSTED_KEYS=""